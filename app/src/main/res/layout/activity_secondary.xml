<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_secondary_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondaryActivity">

    <Button
        android:id="@+id/btn_secondary_upPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/btn_secondary_middlePosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_secondary_upPosition"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

    <Button
        android:id="@+id/btn_secondary_downPosition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_secondary_middlePosition"
        android:layout_centerInParent="true"
        android:text="@string/app_name" />

</RelativeLayout>